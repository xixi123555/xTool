{
  "name": "devtools-suite",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "electron",
    "renderer",
    "packages/shared"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace devtools-suite-renderer dev\" \"yarn workspace devtools-suite-electron dev\"",
    "build": "yarn workspace devtools-suite-renderer build && yarn workspace devtools-suite-electron build",
    "postinstall": "electron-builder install-app-deps",
    "dist": "yarn build && electron-builder --config electron-builder.yml",
    "lint": "eslint \"electron/src/**/*.ts\" \"renderer/src/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.3.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "electron-store": "^10.1.0"
  }
}
