{
  "name": "devtools-suite-electron",
  "version": "0.1.0",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k \"yarn watch\" \"yarn start:electron\"",
    "watch": "tsc -w --preserveWatchOutput",
    "start:electron": "wait-on dist/main.js && wait-on tcp:5199 && cross-env VITE_DEV_SERVER_URL=http://localhost:5199 electron dist/main.js",
    "build": "tsc -p tsconfig.json",
    "start": "electron dist/main.js"
  },
  "dependencies": {
    "devtools-suite-shared": "*",
    "electron": "30.5.1",
    "electron-store": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "wait-on": "^9.0.1"
  }
}
